{
  "extends": "tslint:recommended",
  "rulesDirectory": [],
  "rules": {
    "max-line-length": {
        "options": [255]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
        "severity": "warning",
        "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  },
  "linterOptions": {
    "exclude": [
      "types/phaser.d.ts"
    ]
  },  
  "jsRules": {
      "max-line-length": {
          "options": [255]
      }
  }
}